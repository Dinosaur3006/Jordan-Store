@model WebApplication.Models.RegisterModel

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Register", "User", FormMethod.Post))
{
    <!-- Start Banner Area -->
    <section class="banner-area organic-breadcrumb">
        <div class="container">
            <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
                <div class="col-first">
                    <h1>Register</h1>
                    <nav class="d-flex align-items-center">
                        <a href="/">Home<span class="lnr lnr-arrow-right"></span></a>
                        <a href="/User/Register">Register</a>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <!-- End Banner Area -->

    <!--================Login Box Area =================-->
    <section class="login_box_area section_gap">
        <div class="container">
            <div class="row">
                <div class="col-md-12"> 
                    <div class="login_form_inner" style="padding-top:0;">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <p style=" padding-top: 10px;">@Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })</p>
                        <p>@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })</p>
                        <p>@Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })</p>
                        <p> @Html.ValidationMessageFor(model => model.Customer_Name, "", new { @class = "text-danger" })</p>
                        <p>@Html.ValidationMessageFor(model => model.Customer_Phone, "", new { @class = "text-danger" })</p>
                        <p>@Html.ValidationMessageFor(model => model.Customer_Address, "", new { @class = "text-danger" })</p>
                        <p>
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </p>
                            <div class="modal-body modal-body-sub_agile" style="margin:0 auto; display:block;">
                                <div class=" modal_body_left modal_body_left1">
                                    @if (ViewBag.Error != null)
                                    {
                                        <div class="alert alert-danger">@ViewBag.Error</div>
                                    }    @if (ViewBag.Success != null)
                                    {
                                        <div class="alert alert-success">@ViewBag.Success</div>
                                    }
                                    <div class="form-group">

                                        @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-3" })
                                        @Html.TextBoxFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })

                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-3" })
                                        @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label col-md-3" })
                                        @Html.PasswordFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Customer_Name, htmlAttributes: new { @class = "control-label col-md-3" })
                                        @Html.TextBoxFor(model => model.Customer_Name, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Customer_Phone, htmlAttributes: new { @class = "control-label col-md-3" })
                                        @Html.TextBoxFor(model => model.Customer_Phone, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Customer_Address, htmlAttributes: new { @class = "control-label col-md-3" })
                                        @Html.TextBoxFor(model => model.Customer_Address, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-3" })
                                        @Html.TextBoxFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                    <br />
                                    <div class="form-group">
                                        <input style="width:50%; margin-top:20px;" type="submit" value="Sign Up" class="primary-btn" />
                        <p>If you have an account. Please <a style="font-weight:bold;" href="/User/Login">login</a> now!</p>

                        </div>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================End Login Box Area =================-->


}




