@model WebApplication.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- page title area start -->
<div class="page-title-area">
    <div class="row align-items-center">
        <div class="col-sm-6">
            <div class="breadcrumbs-area clearfix">
                <h4 class="page-title pull-left">Delete</h4>
                <ul class="breadcrumbs pull-left">
                    <li><a href="/HomeAdmin">Home</a></li>
                    <li><a href="/MProduct/Index">Product Management</a></li>
                    <li><span>Delete</span></li>
                </ul>
            </div>
        </div>
        <div class="col-sm-6 clearfix">
            <div class="user-profile pull-right">
                <img class="avatar user-thumb" src="~/Theme/assets/images/author/avatar.png" alt="avatar">
                <h4 class="user-name dropdown-toggle" data-toggle="dropdown">Welcome: @Session["Admin"]<i class="fa fa-angle-down"></i></h4>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="@Url.Action("Logout","HomeAdmin")">Log Out</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- page title area end -->
<div class="main-content-inner">
    <div class="col-12 mt-5">
        <div class="card">
            <div class="card-body">
                <h4>Are you sure you want to delete this item?</h4>
                <br />

                <dl class="dl-horizontal">
                    <dt>
                        @Html.LabelFor(model => model.Product_ID, "ID"): &nbsp;<span style="font-weight:normal">@Html.DisplayFor(model => model.Product_ID)</span>

                    </dt>
                    <dt>
                        Image
                        @*@Html.DisplayNameFor(model => model.Product_Image)*@
                    </dt>
                    <dd>
                        <img src="~/Images/@Html.DisplayFor(modelItem => Model.Product_Image)" width="200" />
                    </dd>

                    <br />
                    <dt>
                        @Html.LabelFor(model => model.Product_Name, "Product Name"): &nbsp;<span style="font-weight:normal">@Html.DisplayFor(model => model.Product_Name)</span>

                    </dt>

                    <dt>
                        @Html.LabelFor(model => model.Product_Price, "Price"): &nbsp;<span style="font-weight:normal">$@Html.DisplayFor(model => model.Product_Price)</span>
                    </dt>

                    <dt>
                        @Html.LabelFor(model => model.Product_Date, "Date"): &nbsp;<span style="font-weight:normal"> @Html.DisplayFor(model => model.Product_Date)</span>
                    </dt>

                    <dt>
                        @Html.LabelFor(model => model.Product_Description, "Description"): &nbsp;<span style="font-weight:normal">@Html.DisplayFor(model => model.Product_Description)</span>
                    </dt>

                    <dt>

                        @Html.LabelFor(model => model.Product_Discount, "Discount"): &nbsp;<span style="font-weight:normal">@Html.FormatValue(Model.Product_Discount, "{0:p}")</span>
                    </dt>

                    <dt>
                        @Html.LabelFor(model => model.Category.Category_Name, "Category"): &nbsp;<span style="font-weight:normal">@Html.DisplayFor(model => model.Category.Category_Name)</span>
                    </dt>

                    <dt>
                        @Html.LabelFor(model => model.Supply.Supply_Name, "Supply"): &nbsp;<span style="font-weight:normal">@Html.DisplayFor(model => model.Supply.Supply_Name)</span>
                    </dt>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-primary  mt-4 pr-4 pl-4" /> &nbsp;
                        <a href="/MProduct" class="btn btn-info  mt-4 pr-4 pl-4">
                            Back to List
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

