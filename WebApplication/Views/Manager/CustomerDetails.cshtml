@model WebApplication.Models.Customer

@{
    ViewBag.Title = "CustomerDetails";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<!-- page title area start -->
<div class="page-title-area">
    <div class="row align-items-center">
        <div class="col-sm-6">
            <div class="breadcrumbs-area clearfix">
                <h4 class="page-title pull-left">Customer Detail</h4>
                <ul class="breadcrumbs pull-left">
                    <li><a href="/HomeAdmin">Home</a></li>
                    <li><span>Customer Detail</span></li>
                </ul>
            </div>
        </div>
        <div class="col-sm-6 clearfix">
            <div class="user-profile pull-right">
                <img class="avatar user-thumb" src="~/Theme/assets/images/author/avatar.png" alt="avatar">
                <h4 class="user-name dropdown-toggle" data-toggle="dropdown">Welcome: @Session["Admin"]<i class="fa fa-angle-down"></i></h4>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="@Url.Action("Logout","HomeAdmin")">Log Out</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- page title area end -->
<div class="main-content-inner">
    <div class="col-12 mt-5">
        <div class="card">
            <div class="card-body">
                <br />

                <dl class="dl-horizontal">
                    <dt>
                        @Html.LabelFor(model => model.Username, "Username"): &nbsp;<span style="font-weight:normal">@Html.DisplayFor(model => model.Username)</span>
                    </dt>

                    <dt>
                        @Html.LabelFor(model => model.Customer_Name, "Customer Name"): &nbsp;<span style="font-weight:normal">@Html.DisplayFor(model => model.Customer_Name)</span>
                    </dt>

                    <dt>
                        @Html.LabelFor(model => model.Customer_Phone, "Phone"): &nbsp;<span style="font-weight:normal"> @Html.DisplayFor(model => model.Customer_Phone)</span>
                    </dt>

                    <dt>
                        @Html.LabelFor(model => model.Customer_Address, "Address"): &nbsp;<span style="font-weight:normal">@Html.DisplayFor(model => model.Customer_Address)</span>
                    </dt>

                    <dt>
                        @Html.LabelFor(model => model.Email, "Email"): &nbsp;<span style="font-weight:normal">@Html.DisplayFor(model => model.Email)</span>
                    </dt>
                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <a href="/Manager/CheckOrders" class="btn btn-info  mt-4 pr-4 pl-4">
                            Back to List
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
