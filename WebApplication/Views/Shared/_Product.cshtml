
@model PagedList.IPagedList<WebApplication.Models.Product>
@using PagedList.Mvc;

<!DOCTYPE html>
<html>
<head>
    <!-- Mobile Specific Meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Favicon-->
    <link rel="shortcut icon" href="~/Theme/img/logo.svg">
    <!-- Author Meta -->
    <meta name="author" content="CodePixar">
    <!-- Meta Description -->
    <meta name="description" content="">
    <!-- Meta Keyword -->
    <meta name="keywords" content="">
    <!-- meta character set -->
    <meta charset="UTF-8">
    <!-- Site Title -->
    <title>Jordan Sneaker</title>
    <!--
        CSS
        ============================================= -->
    <link rel="stylesheet" href="~/Theme/css/linearicons.css">
    <link rel="stylesheet" href="~/Theme/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Theme/css/themify-icons.css">
    <link rel="stylesheet" href="~/Theme/css/bootstrap.css">
    <link rel="stylesheet" href="~/Theme/css/owl.carousel.css">
    <link rel="stylesheet" href="~/Theme/css/nice-select.css">
    <link rel="stylesheet" href="~/Theme/css/nouislider.min.css">
    <link rel="stylesheet" href="~/Theme/css/ion.rangeSlider.css" />
    <link rel="stylesheet" href="~/Theme/css/ion.rangeSlider.skinFlat.css" />
    <link rel="stylesheet" href="~/Theme/css/magnific-popup.css">
    <link rel="stylesheet" href="~/Theme/css/main.css">
</head>

<body>
    <!-- Start Header Area -->
    @Html.Partial("_HeaderLayout")

    <section class="banner-area organic-breadcrumb">
        <div class="container">
            <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
                <div class="col-first">
                    <h1>Collection</h1>
                    <nav class="d-flex align-items-center">
                        <a href="/">Home<span class="lnr lnr-arrow-right"></span></a>
                        <a href="/Product/Collection">Collection</a>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <div class="container" style="margin-top:40px;">
        <div class="row">
            <div class="col-xl-3 col-lg-4 col-md-5">
                <div class="sidebar-categories">
                    <div class="head" style="color:#fff">Sort By</div>
                    <ul class="main-categories">
                        <li class="main-nav-list">
                            <a style="cursor:pointer" href="@Url.Action("Category","Product", new {CategoryId = Request.QueryString["CategoryID"], sort = "h->l"})"> <label id="item-0" for="item-0-0" style="font-size:14px;cursor:pointer"><i class="fa fa-sort-amount-desc" style="color:red" aria-hidden="true"></i> Price(High->Low)</label></a>
                        </li>
                        <li class="main-nav-list">
                            <a style="cursor:pointer" href="@Url.Action("Category","Product", new {CategoryId = Request.QueryString["CategoryID"], sort = "l->h"})"> <label id="item-0" for="item-0-0" style="font-size:14px;cursor:pointer"><i class="fa fa-sort-amount-asc" style="color:red" aria-hidden="true"></i> Price(Low->High)</label></a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-xl-9 col-lg-8 col-md-7">
                <section class="lattest-product-area pb-40 category-list">
                    @RenderBody()
                </section>

                <div class="pagination" style=" float: right; color:#fff;
    width: 20%;
    text-align: left;margin-bottom:20px;">
                    @Html.PagedListPager(Model, page => Url.Action("Category", "Product", new { CategoryId = Request.QueryString["CategoryID"], sort = Request.QueryString["sort"], page }))
                </div>
            </div>
        </div>
    </div>
    <!-- start footer Area -->
    @Html.Partial("_FooterLayout")
    <!-- End footer Area -->
    <script src="~/Theme/js/vendor/jquery-2.2.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4"
            crossorigin="anonymous"></script>
    <script src="~/Theme/js/vendor/bootstrap.min.js"></script>
    @*<script src="~/Theme/js/jquery.ajaxchimp.min.js"></script>*@
    <script src="~/Theme/js/jquery.nice-select.min.js"></script>
    <script src="~/Theme/js/jquery.sticky.js"></script>
    <script src="~/Theme/js/nouislider.min.js"></script>
    @*<script src="~/Theme/js/countdown.js"></script>*@
    <script src="~/Theme/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Theme/js/owl.carousel.min.js"></script>
    <!--gmaps Js-->
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCjCGmQ0Uq4exrzdcL6rvxywDDOvfAu6eE"></script>
    <script src="~/Theme/js/gmaps.min.js"></script>
    <script src="~/Theme/js/main.js"></script>
</body>
</html>
