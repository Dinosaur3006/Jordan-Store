@model WebApplication.Models.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<h2>Delete Category</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(model => model.Category_Name, "Category Name"): &nbsp;<span style="font-weight:normal">@Html.DisplayFor(model => model.Category_Name)</span>
        </dt>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-info" /> &nbsp;
            <a href="/MCategory" class="btn btn-info">
                Back to List
            </a>
        </div>
    }
</div>
